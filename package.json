{
  "name": "sensand-golden-webapp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "test": "vitest",
    "test:e2e": "playwright test",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint src --ext ts,tsx",
    "check:circular": "madge --circular --extensions ts,tsx src",
    "check:budget": "bash scripts/check-change-budget.sh",
    "check:all": "pnpm check:types && pnpm check:lint && pnpm check:circular",
    "gen:feature": "bash scripts/gen-feature.sh",
    "gen:domain": "bash scripts/gen-domain.sh",
    "doctor": "bash scripts/doctor.sh",
    "help": "cat docs/START_HERE.md"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.14.1",
    "@tanstack/react-query-devtools": "^5.14.1",
    "zustand": "^4.4.1",
    "@ts-rest/core": "^3.30.5",
    "zod": "^3.22.2",
    "@radix-ui/themes": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "vite": "^5.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "madge": "^6.1.0",
    "prettier": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
